generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model LocaisSenai {
  id Int @id@default(autoincrement())
  nome String

  achado Achado[]
  @@map("locais_senai")
}

model User {
  id Int @id@default(autoincrement())
  nome String
  cpf String   @unique
  email String @unique
  
  achado Achado[]
  @@map("users")
}

model Achado {
  id Int @id@default(autoincrement())
  item String
  descricao String
  imagem String
  entregue Boolean
  data_encontrado DateTime?

  local_encontrado LocaisSenai @relation(fields: [local_encontrado_id], references: [id])
  local_encontrado_id Int

  usuario_devolvido User @relation(fields: [usuario_devolvido_id], references: [id])
  usuario_devolvido_id Int

  @@map("achados")
}